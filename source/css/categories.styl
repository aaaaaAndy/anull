
.categories-container
  width 100%
  column-count 4
  padding 64px 8px 32px
  column-gap 16px
  .categories-card
    width 240px
    min-height 100px
    border 1px solid #dfdede
    margin-bottom 16px
    break-inside avoid
    .categories-card-header
      width 100%
      height 57px
      line-height 57px
      vertical-align middle
      border-bottom 1px solid #dfdede
      .categories-card-header-content
        padding 0 16px
        display flex
        justify-content space-between
        align-items: center
    .categories-card-body
      padding 16px
      .article-item
        position relative
        width 100%
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
        line-height 24px
        .article-item-link
          font-size 14px
          color rgba(0, 0, 0, 0.65)
      .article-item:hover
        transform scale(1.02)
        .article-item-link
          color $theme-color
      .article-item::before
        position absolute
        top 12px
        content ""
        display block
        width 4px
        height 1px
        background-color $theme-color


