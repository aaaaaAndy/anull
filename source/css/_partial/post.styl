
.post
  position: relative
  text-align: left
  border-bottom: 1px dashed #ddd
  margin: 0 0 4.5em
  padding: 0 0 3em
  font-family "JetBrains Mono", Lato-Bold, 'Helvetica Neue', Arial, 'Noto Sans', sans-serif;
  &::after
    content: ''
    display: block
    background: url('https://cdn.jsdelivr.net/gh/frontendsophie/hexo-theme-autumn@1.0.0/source/img/button.svg') no-repeat -46px top / 132px 35px
    width: 88px
    height: 35px
    position: absolute
    left: 50%
    top: 100%
    transform: translate(-50%, -18px)

  .post-cat
    display: inline-block
    margin: 0 0 5px
    &:first-of-type::after
      content: "\00B7"
      margin: 0 .75em
      color: #f78769
    &:last-of-type::after
      content: ''
    a
      font: 700 13px Lato-Bold
      color: #f78769
      text-decoration: none
      transition: .3s
      text-transform: upperCase
      letter-spacing: 1px
      &:hover
        color: #777

  .post-title
    margin-bottom 0
    a
      color #555555
      font-family "JetBrains Mono", Lato-Bold, 'Helvetica Neue', Arial, 'Noto Sans', sans-serif;
      font-size 26px
      font-weight bold
      text-decoration: none
      &:hover
        color #000000

  .post-date
    margin 0 0 30px
    padding: 0
    list-style: none
    color: #bbb
    font: 14px/1.6 Lato
    li
      display: inline-block
      &:first-child::after
        content: "\00B7"
        margin: 0 .75em
  .post-cover
    position: relative
    user-select: none
    &:after
      position: absolute
      content: ''
      width: 82%
      height: 100%
      top: 0
      left: 50%
      transform: translateX(-50%)
      box-shadow:0 0 40px 10px #ffffff inset
    img
      max-width: 80%
      border-radius: 10px

  .post-content
    position: relative
    color: #555555
    font-size: 1rem
    line-height: 1.8
    margin-bottom: 1.5em
    text-align: left
    //font-family "Microsoft YaHei"
    font-family "JetBrains Mono", 'Noto Sans', sans-serif, Lato-Bold, 'Helvetica Neue', Arial;
    a.more-link
      //box-shadow: inset 0 -80px 80px -5px rgba(255,255,255,.75)
      color: #f99157
      font-family: Lora-Bold
      font-weight: 700
      display: block
      width: 100%
      position: absolute
      bottom: -32px
      padding-top: 100px
      text-align: left
      text-decoration: none
      transition: .5s
      &:hover
        //box-shadow: none
    img
      max-width 100%
      max-height: 600px
      border-radius: 4px
.post-cover
  display: none

.post-category
  color rgb(40, 40, 40)
  margin-right 20px
