@font-face
  font-family: Lora;
  src: url('../font/Lora-Regular.ttf'), url('../font/Lora-Regular.eot')

@font-face
  font-family: Lora-Bold;
  src: url('../font/Lora-Bold.ttf'), url('../font/Lora-Bold.eot')

@font-face
  font-family: Lato;
  src: url('../font/Lato-Regular.ttf'), url('../font/Lato-Regular.eot')

@font-face
  font-family: Lato-Bold;
  src: url('../font/Lato-Bold.ttf'), url('../font/Lato-Bold.eot')

pre
  margin-left 16px
  font-family JetBrains Mono, Segoe UI Emoji, Segoe UI Symbol

.highlight
  margin 16px 0 !important
  border-radius 8px

p
  code
    color #f78769
    font-size 14px
    margin 0 3px
    font-family JetBrains Mono, Segoe UI Emoji, Segoe UI Symbol

