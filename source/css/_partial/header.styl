
.menu-outer
  width 100%
  height 100px
  display flex
  justify-content center
  align-items center
  .menu-inner
    width 1200px
    height 100%
    display flex
    justify-content center
    align-items center
    &-item
      width 100px
      height 30px
      line-height 30px
      vertical-align middle
      text-align center
      margin 0 16px
      cursor pointer
      a
        color $main-text-color
      &:hover
        a
          color $theme-color

