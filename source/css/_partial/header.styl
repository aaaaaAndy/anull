a
  text-decoration none

.header
  display flex
  justify-content space-between
  align-items center
  width 1100px
  height 50px
  margin-bottom 120px
  padding-left 60px
  .title
    .logo
      color rgb(28, 26, 40)
      font-weight bold
      font-style italic

  .links
    height 100%
    .menu-inner
      margin 0
      height 100%
      .menu-inner-item
        display inline-flex
        justify-content center
        align-items center
        box-sizing border-box
        width 120px
        height 100%
        cursor pointer
        text-align center
        transition all .15s ease-in-out
        a
          width 100%
          color rgb(30, 26, 48)
        &:hover
          transform scale(.9)
          border 4px solid rgb(28, 26, 40)


.menu-inner-item-clicked
  background-color rgb(28, 26, 40)
  a
    color #ffffff !important
