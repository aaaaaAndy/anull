
.post-content
  padding-top 16px
  h1
    position: relative
    text-align center
    font-size 24px
    font-weight bold
    margin 48px 0 64px
    &:after
      content ""
      display block
      width 100px
      height 1px
      position: relative
      top 8px
      left 50%
      transform: translateX(-50%)
      border-bottom: 2px dashed $theme-color

  h2
    position: relative
    font-size 22px
    margin 40px 0 40px 16px
    font-weight bold
    &:before
      content ""
      display block
      width 6px
      height 30px
      position: absolute
      left -18px
      top -4px
      margin-right 58px
      background-color $theme-color

  h3
    position relative
    font-size 21px
    margin 40px 0 40px 16px
    font-weight bold
    &:before
      content ""
      display block
      width 6px
      height 6px
      position: absolute
      left -18px
      top 8px
      margin-right 58px
      border-radius 50%
      background-color $theme-color

  h4
    position relative
    font-size 18px
    //margin 32px 0 32px 16px
    margin-left 16px
    line-height 64px
    font-weight bold
    &:before
      content ""
      display block
      width 6px
      height 2px
      position: absolute
      left -18px
      top 30px
      margin-right 58px
      background-color $theme-color

  h5
    font-weight bold
    line-height 36px

  p
    font-size 14px
    line-height 30px
    margin-bottom 0px
    color $excerpt-color

  ul
    margin-left 38px
    color $excerpt-color
    font-size 14px
    li
      position relative
      line-height 30px
      &:before
        content ""
        display block
        width 6px
        height 6px
        position: absolute
        left -18px
        top 10px
        margin-right 58px
        border-radius 50%
        background-color $title-color

  ol
    margin-left 38px
    color $excerpt-color
    font-size 14px
    li
      position relative
      line-height 30px
